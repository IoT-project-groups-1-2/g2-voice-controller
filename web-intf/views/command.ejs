<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Sign Up</title>
    <style>
        body {
            font-family: "Courier New", sans-serif;
            background: lightblue;
            margin:0;
        }

        h1{
            font-family: "Courier New", sans-serif;
            font-size: 60px;
        }
        .header {
            position: absolute;
            padding: 30px;
            text-align: left;
            background: #1abc9c;
            color: black;
            font-size: 30px;
            width: 100%;


        }
        #return{
            position: absolute;
            top: 32%;
            right: 0%;
            font-family: "Courier New", sans-serif;
            font-weight: bold;
            color: black;
            margin: 5%;
        }
        #songContainer{
            position: absolute;
            top: 21%;
            right: 38%;
            align-content: center;
            counter-reset: index;
            padding: 0;
            max-width: 500px;
            margin:10px;
            font-size: 25px;
        }

        li {
            counter-increment: index;
            display: flex;
            align-items: center;
            padding: 12px 0;
            box-sizing: border-box;
            list-style-type: "SONG";
        }
        ul{
            margin: 0px;
            list-style-type: "SONG";
        }


        /* Element counter */
        li::before {

            content: counters(index, ".", decimal-leading-zero);
            font-size: 1.5rem;
            text-align: right;
            font-weight: bold;
            min-width: 50px;
            padding-right: 12px;
            font-variant-numeric: tabular-nums;
            align-self: flex-start;
            background-image: linear-gradient(to bottom, blueviolet, orangered);
            background-attachment: fixed;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }


        /* Element separation */
        li+li {
            border-top: 1px solid green;
        }

    </style>
</head>
<body>
<div class = "header">
    <h1 id = "header">LIST OF SONGS</h1>
    <a href="http://localhost:3000/home"  id="return">Go Back</a>
</div>





<div id = "songContainer">

</div>
</body>

<script>
    //Getting the songlist through json and displaying them one by one
    fetch('/api/songs').then(res=>res.json()).then(list => {
        list.forEach(song =>{
            let songName = song.Name;
            let songId = song.id;
            console.log(songId + songName);
            const songElement = document.createElement('a');
            const songContainer = document.getElementById("songContainer");
            songElement.innerHTML = `
                        <div class="songs" >
                            <ul>
                            <li style="font-weight: bold; border-top: 1px solid black;">${songName}</li>
                        </div>
                   `;
            songContainer.appendChild(songElement);
        })

    })



</script>
</html>